{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="app-content">
        <div class="dashboard-container">
            {% include "partials/_dashboard_navbar.html.twig" %}
            <div class="menu-category">
                
            </div>
            <div class="photos-container container my-5">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2">
                    {% for photo in photos %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img class="card-img-top" src="{{asset('build/uploads/')}}{{photo.name}}" alt="">
                            <div class="card-body">
                                <ul>
                                    <li>
                                        <span>Nom </span>: {{photo.name}}
                                    </li>
                                    <li>
                                        <span>Cat√©gorie </span>: {{photo.category.name}}
                                    </li>
                                    <li>
                                        <span>Date </span>: {{ photo.uploadedAt ? photo.uploadedAt|date('Y-m-d H:i:s') : '' }}
                                    </li>
                                </ul>
                            </div>
                            <div class="card-footer d-flex justify-content-end">                                
                                {{ include('photo/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
